{
    "version": 2,
    "outputDirectory": "frontend/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/server.js"
        },
        {
            "source": "/l/(.*)",
            "destination": "backend/server.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "backend/uploads/$1"
        },
        {
            "source": "/assets/(.*)",
            "destination": "frontend/dist/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/dist/index.html"
        }
    ]
}