{
    "version": 2,
    "functions": {
        "backend/server.js": {
            "runtime": "@vercel/node@18.x",
            "includeFiles": "backend/src/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/server.js"
        },
        {
            "source": "/l/(.*)",
            "destination": "/backend/server.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/backend/uploads/$1"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/frontend/dist/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/index.html"
        }
    ]
}